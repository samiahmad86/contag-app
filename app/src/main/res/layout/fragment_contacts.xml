<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pb_contacts"
        layout="@layout/layout_progress_bar" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_filter_text"
        android:text="@string/filter"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="14sp"
        android:textColor="@color/black"/>

    <Spinner
        android:layout_below="@id/tv_filter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_search_filter"/>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:imeOptions="actionSearch"
        android:layout_below="@id/sp_search_filter"
        android:id="@+id/et_contact_search"
        android:drawableLeft="@drawable/btn_search"
        android:background="@drawable/bg_contact_search"
        android:singleLine="true"
        android:padding="5dp"
        android:layout_margin="10dp"/>

    <ListView
        android:id="@+id/lv_contact"
        style="@style/ContactScrollBarStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_below="@id/et_contact_search"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

</RelativeLayout>