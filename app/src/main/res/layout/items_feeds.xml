<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#e3e3e3"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#fff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_image_items_feeds"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/profile_name_items_feeds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Misca Collins"
                    android:textColor="#B6B6B6"
                    android:textSize="25sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/profile_name_items_feeds"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:text="6:30 am 29/2/14"
                    android:textColor="#D4D3D3"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_name_items_feeds"
                    android:layout_marginTop="10dp"
                    android:text="Lost the battle of blackwater and now planning."
                    android:textColor="#a7a6a6" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>