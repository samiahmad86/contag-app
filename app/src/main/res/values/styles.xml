<resources>

    <!-- Base application theme. -->
    <style name="Theme.Contag.Material.NoActionBar" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>

    </style>

    <style name="Theme.Contag.Material.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>

    </style>
    <!--this will reduce space between actionBar Icons-->
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:maxWidth">50dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="Contag.Text.Headline" parent="Base.TextAppearance.AppCompat.Headline"></style>

    <style name="Contag.Text.Body" parent="Base.TextAppearance.AppCompat.Body1"></style>

    <style name="Contag.TextAppearance.Title" parent="Base.TextAppearance.AppCompat.Title" />

    <style name="Contag.TextAppearance.Title.Inverse" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Contag.TextAppearance.Subhead" parent="Base.TextAppearance.AppCompat.Subhead" />

    <style name="InterestTextBoxStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/bg_white_border_transparent_rect</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ContactInterestTextBoxStyle" parent="InterestTextBoxStyle">
        <item name="android:background">@drawable/bg_blue_border_rect</item>
        <item name="android:textColor">@color/txt_contact_interest</item>
    </style>

    <style name="ProfileInterestTextBoxStyle" parent="InterestTextBoxStyle">
        <item name="android:background">@drawable/bg_white_border_rect_transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NotificationsButtonStyle">
        <item name="android:background">@drawable/bg_btn_notifications</item>
        <item name="android:textColor">@color/notifications_story</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InterestAutoCompleteStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableRight">@drawable/btn_add</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:hint">@string/type_for_suggestions</item>
        <item name="android:background">@drawable/bg_white_border_transparent_rect</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ContactNameStyle">
        <item name="android:textColor">@color/txt_contact_name</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ContactIdStyle">
        <item name="android:textColor">@color/txt_contact_id</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="labelStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ContactScrollBarStyle" parent="ScrollBarStyle">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_contact_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_contact_track</item>
    </style>

    <style name="ProfileScrollBarStyle">
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_contact_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/scrollbar_contact_track</item>
    </style>

    <style name="ScrollBarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">true</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarFadeDuration">2000</item>
        <item name="android:scrollbarDefaultDelayBeforeFade">1000</item>
    </style>
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>

    </style>
    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#ffffff</item>s
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlHighlight">#ffffff</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="Widget.MyTheme.HeaderBar.Spinner" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:theme">@style/Theme.Contag.Material.ActionBar</item>
    </style>
    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="InterestsTextBoxStyle">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
