<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/bg_shadow"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_cuntag_invite"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/invite_to_cunt"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:background="@drawable/bg_blue_button"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_user_initial"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerVertical="false"
        android:text="A"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_circle_1" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/btn_cuntag_invite"
        android:layout_toRightOf="@id/tv_user_initial"
        android:text="@string/abc_action_bar_home_description"
        style="@style/ContactNameStyle"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contact_name"
        android:id="@+id/tv_contact_num"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_above="@+id/view_1"
        android:layout_toLeftOf="@id/btn_cuntag_invite"
        android:layout_toRightOf="@id/tv_user_initial"
        style="@style/ContactIdStyle"
        android:layout_marginTop="3dp"
        android:text="@string/abc_action_bar_home_description"/>
    <View
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:background="@color/light_gray"
        android:layout_below="@id/tv_user_initial"
        android:layout_marginTop="5dp"

        android:id="@+id/view_1"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_call"
        android:layout_width="20dp"

        android:paddingTop="5dp"
        android:layout_marginTop="8dp"
        android:layout_height="20dp"
        android:focusable="false"
        android:layout_below="@id/view_1"
        android:background="@drawable/action_phone"
        android:visibility="visible" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_msg"
        android:layout_width="24dp"
        android:layout_marginLeft="12dp"
        android:paddingTop="5dp"
        android:layout_toRightOf="@id/btn_call"
        android:layout_marginTop="5dp"
        android:layout_height="24dp"
        android:focusable="false"
        android:layout_below="@id/view_1"
        android:background="@drawable/conversation"
        android:visibility="visible" />



</RelativeLayout>