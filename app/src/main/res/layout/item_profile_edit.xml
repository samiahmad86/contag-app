<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="5dp">
<RelativeLayout

    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/rl_other_container"
    android:background="@android:color/transparent"
    android:padding="0dp">

   <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_field_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"

       android:layout_marginTop="20dp"
        android:text="check"

       />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_field_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_field_name"
        android:textColor="@color/white"
        android:text="check"
        android:layout_marginTop="5dp"

        android:layout_marginRight="50dp"

        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:alpha="0.3"
        android:id="@+id/view_line"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tv_field_value"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/rl_edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/tv_field_name"
      >

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_field_value"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:textSize="13sp"

            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edit_text"
            android:theme="@style/EditTextTheme"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/sp_field_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:theme="@style/Theme.Contag.Material.ActionBar"
            android:backgroundTint="@color/light_blue"
            android:popupBackground="@color/light_blue"
            android:textSize="15sp"
            android:paddingLeft="0dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" />
    </RelativeLayout>

    <!--<android.support.v7.widget.AppCompatButton-->
    <!--android:id="@+id/btn_edit"-->
    <!--android:layout_width="30dp"-->
    <!--android:layout_height="30dp"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignTop="@id/tv_field_label"-->
    <!--android:background="@drawable/btn_edit_pencil" />-->

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_add"
        android:layout_width="25dp"
        android:layout_height="25dp"


        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_field_name"
        android:background="@drawable/btn_add"
        android:visibility="gone" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@null"
        android:layout_marginRight="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_field_name"
        android:drawableRight="@drawable/share_another"
        android:visibility="gone" />



</RelativeLayout>
    </ScrollView>