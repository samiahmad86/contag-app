<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"

    >

    <RelativeLayout
        android:id="@+id/ll_profile_label_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        >


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_field_name"
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="65dp"
            android:layout_height="wrap_content"
            android:text="check"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_field_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_field_name"
            android:layout_marginTop="5dp"
            android:layout_marginRight="65dp"

            android:text="check"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.3"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_field_value"
            android:background="@color/light_gray" />



            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_request"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/plus"
                android:background="@null"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                android:textAllCaps="false"

                android:textColor="@color/white"

                android:visibility="gone" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_alignParentRight="true"
                android:drawableTop="@drawable/next"
                android:background="@null"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:visibility="gone" />


    </RelativeLayout>




</RelativeLayout>