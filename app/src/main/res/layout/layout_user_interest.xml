<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_user_interest_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_user_interest_1"
            style="@style/ContactInterestTextBoxStyle"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_user_interest_2"
            style="@style/ContactInterestTextBoxStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/abc_action_bar_home_description"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_user_interest_lower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_user_interest_3"
            style="@style/ContactInterestTextBoxStyle"
            android:text="@string/abc_action_bar_home_description"
            android:visibility="gone" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_user_interest_4"
            style="@style/ContactInterestTextBoxStyle"
            android:layout_marginLeft="10dp"
            android:text="@string/abc_action_bar_home_description"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>