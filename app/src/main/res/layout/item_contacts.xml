<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_contacts"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_cuntag_invite"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="@string/invite_to_cunt"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:background="?android:attr/selectableItemBackground"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_user_initial"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_centerVertical="false"
        android:text="A"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@drawable/bg_circle_1" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_contact_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/btn_cuntag_invite"
        android:layout_toRightOf="@id/tv_user_initial"
        android:text="@string/abc_action_bar_home_description"
        style="@style/ContactNameStyle"/>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_contact_name"
        android:id="@+id/tv_contact_num"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="3dp"
        android:layout_toLeftOf="@id/btn_cuntag_invite"
        android:layout_toRightOf="@id/tv_user_initial"
        style="@style/ContactIdStyle"
        android:layout_marginTop="3dp"
        android:text="@string/abc_action_bar_home_description"/>



</RelativeLayout>