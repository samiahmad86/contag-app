<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_feeds_items"
    android:padding="10dp">

    <com.contag.app.view.CircularImageView
        android:id="@+id/iv_notifications_usr_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/default_profile_pic" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_notifications_usr_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_notifications_usr_img"
        android:orientation="vertical">

        <!--<android.support.v7.widget.AppCompatTextView-->
            <!--android:id="@+id/tv_notifications_usr_name"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:textColor="@color/feeds_usr_name"-->
            <!--android:textSize="16sp" />-->


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_notifications_txt"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/feeds_story"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_notifications_txt"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:background="@color/material_deep_teal_200"
            android:visibility="visible"
             />

    </RelativeLayout>

</RelativeLayout>