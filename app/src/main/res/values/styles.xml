<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:screenOrientation">portrait</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="UserInterestTextBoxStyle">
        <item name="android:background">@drawable/bg_blue_border_rect</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/txt_contact_interest</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ContactNameStyle">
        <item name="android:textColor">@color/txt_contact_name</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContactIdStyle">
        <item name="android:textColor">@color/txt_contact_id</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
