<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/pb_contacts"
        layout="@layout/layout_progress_bar" />

    <LinearLayout
        android:id="@+id/ll_filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_filter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="@string/filter"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/sp_search_filter"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_contact_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_filter_container"
        android:layout_margin="10dp"
        android:background="@drawable/bg_contact_search"
        android:drawableLeft="@drawable/btn_search"
        android:imeOptions="actionSearch"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/lv_contact"
        style="@style/ContactScrollBarStyle"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:layout_below="@id/et_contact_search"
        android:layout_margin="10dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp" />

</RelativeLayout>